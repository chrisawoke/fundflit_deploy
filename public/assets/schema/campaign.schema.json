{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Campaign",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "campaign_name": {
      "type": "string"
    },
    "story": {
      "type": "string",
      "description": "Paragraph describing the campaign"
    },
    "goal": {
      "type": "number",
      "format": "float",
      "description": "Fundraising goal of the campaign"
    },
    "current_funds": {
      "type": "number",
      "format": "float",
      "description": "Current raised funds for the campaign"
    },
    "end_date": {
      "type": "string",
      "format": "date",
      "description": "End date of the campaign (ISO 8601 date format)"
    },
    "campaign_image": {
      "type": "string",
      "description": "URL or path to the campaign image"
    }
  },
  "required": [
    "name",
    "campaign_name",
    "story",
    "goal",
    "end_date",
    "campaign_image"
  ]
}
